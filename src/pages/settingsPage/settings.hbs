      </div>
      <div class="settings__main">
        <form class="settings__form flex-column">
          <h3 class="settings__section-title">Аккаунт</h3>
          <div id="account" class="flex">
            <div class="settings__avatar flex-column align-center">
              <img src="{{avatar}}" alt="User Avatar" class="settings__avatar-image" />
              <label for="avatar" class="settings__avatar-title">Сменить аватар</label>
              <input type="file" id="avatar" name="avatar" class="settings__avatar-input" hidden />
            </div>
            <div class="settings__inputs flex-column">
              {{> Input id="first_name" name="first_name" type="text" placeholder="Имя" value=first_name }}
              {{> Input id="second_name" name="second_name" type="text" placeholder="Фамилия" value=second_name }}
              {{> Input id="display_name" name="display_name" type="text" placeholder="Имя в чате" value=display_name }}
              {{> Input id="login" name="login" type="text" placeholder="Логин" value=login }}
              {{> Input id="email" name="email" type="email" placeholder="Email" value=email }}
              {{> Input id="phone" name="phone" type="tel" placeholder="Телефон" value=phone }}
              {{> Input id="oldPassword" name="old_password" type="password" placeholder="Старый пароль"
              value=old_password }}
              {{> Input id="newPassword" name="new_password" type="password" placeholder="Новый пароль"
              value=new_password }}
            </div>
          </div>
          <div class="settings__submit-button flex">
            {{> Button id="login-btn" type="submit" label="Сохранить" className="primary-button" }}
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>
